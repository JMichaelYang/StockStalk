{
    "manifest_version": 2,
    "name": "Stalk",
    "description": "This extension provides the user access to quick stock information.",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "scripts/companies.js"
            ],
            "css": [
                "css/companies.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Make this page red"
    },
    "permissions": [
        "tabs",
        "<all_urls>"
    ]
}